<div class="container"><br>
<%= form_for [@user, @salary] do |form| %>
<div class="col-md-3">
<h3 style="background-color:powderblue;">Salary Portal</h3>
</div>

<div class="col-md-3">
<p>
    <%= form.label :Employee_Name %><br>
    <%= form.text_field :employee_name, placeholder: "employee_name",class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :salary_amount %><br>
    <%= form.text_field :salary_amount, placeholder: "Ammount",class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :salary_date %><br>
    <%= form.text_field :salary_date, placeholder: "Credited date",class:"form-label" %>
</p>
</div>


<div class="col-md-3">
<p>
  
    <%= form.number_field :user_id, id: :salary_user_id, type: :hidden , value:  current_user.id, class:"form-label" %>
</p> 
</div>
<p>
    <%= form.submit class:"btn btn-info btn-sm" %>
    <%= link_to 'Back', user_salaries_path , class:"btn btn-info btn-sm" %>
</p>
</div>
<%end%>