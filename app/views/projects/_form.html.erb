<div class="container"><br>
<%= form_for  [@user, @project] do |form| %>
<div class="col-md-3">
<h3 style="background-color:powderblue;">Project Portal</h3>
</div>
<div class="col-md-3">
<p>
    <%= form.label :Employee_Name %>
    <%= form.text_field :employee_name, placeholder: "User Name", class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :project_name %><br>
    <%= form.text_field :project_name,  placeholder: "Project_Name", class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :duration %><br>
    <%= form.text_field :duration, placeholder: "Project Duration", class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :team_size %><br>
    <%= form.text_field :team_size, placeholder: "Team Size", class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :start_date %><br>
    <%= form.text_field :start_date, placeholder: "Starting Date", class:"form-label" %>
</p>
</div>
<div class="col-md-3">
<p>
    <%= form.label :lead_name %>
    <%= form.text_field :lead_name, placeholder: "Lead Name", class:"form-label" %>
</p>
</div>


<div class="col-md-3">
<p>
  
    <%= form.number_field :user_id, id: :project_user_id, type: :hidden , value:  current_user.id, class:"form-label" %>
</p> 
</div>

<p>
    <%= form.submit  class: "btn btn-info btn-sm" %>
    <%= link_to 'Back', user_projects_path, class:"btn btn-info btn-sm" %>
</p>
</div>
<%end%>