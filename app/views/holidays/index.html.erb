<div class = "container">
<br>
<div class= "col-md-4">
<h3 style="background-color:powderblue;"> Holiday Calendar 2022 </h3>
</div>
<div class= "col-md-7">
<table class="table table-striped table-hover">
  <tr>
    <th>DATE</th>
    <th>Occasion</th>
    <th>Day</th>
    <th></th>
  </tr>
    <% @holidays.each do |holiday| %>
    <tr>
    <td><%= holiday.on_date %></td>
    <td><%= holiday.ocassion %></td>
    <td><%= holiday.day %></td>
    <td><%= link_to 'Destroy', holiday_path(holiday), 
      method: :delete, remote:true,
      data: { confirm: 'Are you sure?' } %></td> 
  </tr> 
  <% end %>
</table>
</div>
</div>